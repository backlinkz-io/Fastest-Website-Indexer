{
  "manifest_version": 3,
  "name": "Rapid Indexer - SEO Indexing Service",
  "version": "1.0.0",
  "description": "Submit URLs to Rapid Indexer directly from Chrome. Index pages, check status, and drive viral traffic.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://rapid-indexer.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rapid Indexer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

